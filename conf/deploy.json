{
  "defaultStacks": ["membership"],
  "packages": {
    "promotions-tool": {
      "type":"autoscaling",
      "apps": [
        "promotions-tool"
      ],
      "data": {
        "port": "9000",
        "bucket": "gu-promotions-tool-dist"
      }
    }
  },
  "recipes": {
    "default" : {
      "depends" : [
        "uploadArtifacts",
        "deploy"
      ]
    },
    "uploadArtifacts": {
      "actionsBeforeApp": ["promotions-tool.uploadArtifacts"]
    },
    "deploy": {
      "actionsPerHost": [
        "promotions-tool.deploy"
      ]
    }
  }
}
